<Window x:Class="RentalService.Presentation.Windows.ReservationSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentalService.Presentation.Windows"
        mc:Ignorable="d"
        Title="ReservationSearchWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zoekcriteria -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Left" >
            <Label Content="Klantnaam:"/>
            <ComboBox x:Name="cmbCustomers" Width="200" Margin="5,0"/>

            <Label Content="Datum:" Margin="15,0,0,0"/>
            <DatePicker x:Name="dpDatum" Width="150" Margin="5,0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Right" >
                <Label Content="Vestiging:" Margin="15,0,0,0"/>
            <ComboBox x:Name="cmbVestiging" Width="200" Margin="5,0"/>

            <Button Content="Zoek" Width="100" Margin="15,15,0,0" Click="btnZoek_Click"/>
        </StackPanel>

        <!-- Resultaten -->
        <DataGrid x:Name="dgReservaties" Grid.Row="2" AutoGenerateColumns="False" Margin="0,10,0,10" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Auto" Binding="{Binding Car.Model}" Width="*"/>
                <DataGridTextColumn Header="Start" Binding="{Binding StartDate}" Width="*"/>
                <DataGridTextColumn Header="Einde" Binding="{Binding EndDate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Acties -->
        <Button x:Name="btnAnnuleer" Content="Annuleer Geselecteerde Reservatie"
                Grid.Row="3" Width="250" Height="40" HorizontalAlignment="Right"
                Click="btnAnnuleer_Click"/>
    </Grid>
</Window>
