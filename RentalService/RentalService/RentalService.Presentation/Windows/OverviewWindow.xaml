<Window x:Class="RentalService.Presentation.Windows.OverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentalService.Presentation.Windows"
        mc:Ignorable="d"
        Title="OverviewWindow" Height="350" Width="450"
        MinWidth="350" MinHeight="350">
    <Grid>
        <TextBlock HorizontalAlignment="Stretch" Margin="80" VerticalAlignment="Top" TextWrapping="Wrap" Name="inlogGegevens" Width="200" TextAlignment="Center"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Reservatie maken" Margin="10" Width="200" Click="ReservatieMaken_Click"/>
            <Button Content="Reservatie opzoeken" Margin="10" Width="200" Click="ReservatieOpzoeken_Click"/>
            <Button Content="Auto overzicht" Margin="10" Width="200" Click="AutoOverzicht_Click"/>
        </StackPanel>


    </Grid>
</Window>
